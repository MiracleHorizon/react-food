{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/pages/*": [
        "../pages/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/ui/*": [
        "components/ui/*"
      ],
      "@/layouts/*": [
        "layouts/*"
      ],
      "@/stores/*": [
        "stores/*"
      ],
      "@/entities/*": [
        "entities/*"
      ],
      "@/models/*": [
        "models/*"
      ],
      "@/modules/*": [
        "modules/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/api/*": [
        "api/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/types/*": [
        "types/*"
      ],
      "@/exceptions/*": [
        "entities/exceptions/*"
      ],
      "@/public/*": [
        "../public/*"
      ],
      "@/styles/*": [
        "../public/styles/*"
      ],
      "@/images/*": [
        "../public/images*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "experimentalDecorators": true,
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
