{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@public/*": [
        "public/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@ui/*": [
        "src/components/ui/*"
      ],
      "@stores/*": [
        "src/stores/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@hoc/*": [
        "src/common/hoc/*"
      ],
      "@router/*": [
        "src/common/router/*"
      ],
      "@helpers/*": [
        "src/common/helpers/*"
      ],
      "@entities/*": [
        "src/common/entities/*"
      ],
      "@constants/*": [
        "src/common/constants/*"
      ],
      "@models/*": [
        "src/common/models/*"
      ],
      "@libs/*": [
        "src/common/libs/*"
      ],
      "@app-types/*": [
        "src/common/types/*"
      ],
      "@styles/*": [
        "public/styles/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
